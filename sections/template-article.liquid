{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <h1>{{ article.title }}</h1>
        {% when 'article_author' %}
            {% if section.settings.enable_author %}
                <small>{{ article.author }}</small>
            {% endif %}
        {% when 'article_published_date' %}
            {% if section.settings.enable_publish_date %}
                {% assign date_time = article.published_at | date: '%Y-%m-%d' %}
                <time datetime="{{ date_time }}">{{ date_time }}</time>
            {% endif %}
        {% when 'featured_image' %}
            {% assign img = article.image %} 
            <img 
                src="{{ img | image_url: width: 1100 }}" 
                alt="{{ img.alt | escape }}" 
                width="{{ img.width }}" 
                height="{{ img.height }}" 
                loading="lazy"
            >
        {% when 'article_content' %}
            <div class="">
                {{ article.content }}
            </div>
        {% else %}
            
    {% endcase %}
{% endfor %}







{% schema %}
{
    "name": "template-article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display Author Name"
        },
        {
            "type": "checkbox",
            "id": "enable_publish_date",
            "default": true,
            "label": "Display Published Date" 
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 1
        },
        {
            "type": "article_published_date",
            "name": "Published Date",
            "limit": 1
        },
        {
            "type": "featured_image",
            "name": "Thumbnail",
            "limit": 1
        },
        {
            "type": "article_content",
            "name": "Content",
            "limit": 1
        }
    ]
}
{% endschema %}